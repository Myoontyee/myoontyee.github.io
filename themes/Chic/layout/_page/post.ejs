            <br>
            <div class="reward" id="reward">
                <div class="sponser">
                    <div class="sponser_btn">支持博主</div>
                    <div class="sponser_img">
                        <div class="sponser_container">
                            <div class="sponser_header">请我吃肯德基！</div>
                            <div class="sponser_body">
                                <div class="alipay">
                                    <span class="sponser_alipay_title">谢谢各位大佬！</span>
                                    <div>
                                        <img class="sponser_alipay" src="/image/Paying.jpg">
                                
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br>
        </section> -->

        <section class="post-tags">
            <div>
                <span>标签:</span>
                <span class="tag">
                    <% if(page.tags.length!==0){%>
                    <% page.tags.forEach(item=>{ %>
                        <!-- <a href="<%- url_for(item.path) %>"># <%- item.name %></a> -->
                        <!-- <a href="<%- url_for(item.path) %>">🏷️<%- item.name %></a> -->
                        <a href="<%- url_for(item.path) %>"><i class="iconfont icon-biaoqian-" style="font-size: 1em;"></i><%- item.name %> </a>
                        
                    <% }) %>
                        <% } %>
                </span>
            </div>
            

            

            <div>
                <a href="javascript:window.history.back();">返回</a>
                <span>· </span>
                <a href="<%- config.root %>">主页</a>
            </div>
        </section>



        <section class="post-nav">
            <% if(post.prev){ %>
                <a class="prev" rel="prev" href="<%- url_for(post.prev.path)%>"><%- post.prev.title%></a>
            <% } %>
            <% if(post.next){ %>
            <a class="next" rel="next" href="<%- url_for(post.next.path)%>"><%- post.next.title%></a>
            <% } %>
        </section>


    </article>



</div>



