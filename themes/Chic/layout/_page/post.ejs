<!-- 引入标签 -->
<link rel="stylesheet" href="../fonts/iconfont3/iconfont.css"> 
<!-- 这个文件是某个具体的文章的布局 -->
<div class="container">
    <%# toc %>
    <%if(theme.post_toc_enable && toc(page.content).length!==0){%>
        <%- partial('_partial/toc') %>
    <%}%>
    <%# article %>
    <article class="post-wrap">
        <header class="post-header">
            <h1 class="post-title"><%= page.title %></h1>
            <% if(theme.post_meta_enable){ %>
                <div class="post-meta">
                    <% if(theme.post_author_enable && config.author){ %>
                        👨‍🎓作者: <a itemprop="author" rel="author" href="/"><%- config.author %></a>
                    <% } %>

                    <% if(page.date && theme.post_date_enable){ %>
                        <span class="post-time">
                        📅日期: <a href="#"><%- date(page.date, theme.date_format)  %>&nbsp;&nbsp;<%- time(page.date, theme.time_format)%></a>
                        </span>
                    <% } %>
                <div>
                    <% if(page.categories.length!==0 && theme.post_category_enable){ %>
                        <span class="post-category">
                            📚类别:
                            <% page.categories.forEach(item=>{ %>
                                <!-- <a href="<%- url_for(item.path) %>"><%- item.name %></a> -->
                                <a href="<%- url_for(item.path) %>"><i class="iconfont icon-fenlei" style="font-size: 1em;"></i><%- item.name %></a> | 
                            <% }) %>
                        </span>
                    <% } %>
                </div>
                    
                    <div>
                        <% if(page.content && theme.post_wordcount_enable){ %>
                            <span class="post-count">
                            📑字数:
                            <a href=""><%= wordcount(page.content) %></a>  
                            </span>
                        <% } %>

                        <% if(page.content && theme.post_min2read_enable){ %>
                            <span class="post-count">
                            ⏱️阅读时长:
                            <a href=""><%= min2read(post.content) %>min</a>  
                            </span>
                        <% } %>

                        <% if(page.content){ %>
                            <span id="busuanzi_container_page_pv">  
                            🕵️‍♂️阅读数:<span id="busuanzi_value_page_pv"><i class="fa fa-spinner fa-spin"></i></span>
                            </span>
                        <% } %>
                        
                    </div>
                </div>
                        
            <% } %>
        </header>

        <div class="post-content">
                <strong>💡 参考文章见Ref，感谢提供思路！</strong>
            <br><strong>🗺️当前这篇博文地址：<%= page.permalink %></strong>
            <br><strong>⚠️警告：博客文章禁止一切形式的非授权非法转载！</strong>
            <br><strong>⚠️Attention: All forms of unauthorized illegal reposts are prohibited !</strong> 
            <%- page.content %>
        </div>
        <section class="reward_class">
            <br>
            <div class="reward" id="reward">
                <div class="sponser">
                    <div class="sponser_btn"><strong>💎支持博主</strong></div>
                    <div class="sponser_img">
                        <div class="sponser_container">
                            <div class="sponser_header">请我吃肯德基🍗！</div>
                            <div class="sponser_body">
                                <div class="alipay">
                                    <span class="sponser_alipay_title">谢谢各位大佬🏌️‍♂️！</span>
                                    <div>
                                        <img class="sponser_alipay" src="/image/Paying.jpg">
                                
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- <br> -->
        </section>
        

        <% if(theme.post_copyright_enable){ %>
            <section class="post-copyright">
                <% if(theme.post_copyright_author_enable){ %>
                    <p class="copyright-item">
                        <span>Author:</span>
                        <span><%- config.author %></span>
                    </p>
                <% } %>
                <% if(theme.post_copyright_permalink_enable){ %>
                    <p class="copyright-item">
                        <span>Permalink:</span>
                        <span><a href="<%- page.permalink %>"><%- page.permalink %></a></span>
                    </p>
                <% } %>
                <% if(theme.post_copyright_license_enable){ %>
                    <p class="copyright-item">
                        <span>License:</span>
                        <span><%- theme.post_copyright_license_text %></span>
                    </p>
                <% } %>
                <% if(theme.post_copyright_slogan_enable){ %>
                     <p class="copyright-item">
                         <span>Slogan:</span>
                         <span><%- theme.post_copyright_slogan_text %></span>
                     </p>
                <% } %>

            </section>
        <% } %>

